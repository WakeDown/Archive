@model ArchiveWeb.Models.Stake

@{
    ViewBag.Title = "Новый стеллаж";
    Layout = "~/Views/Shared/_Editor.cshtml";
}


@section PanelHead
{
    Прием документа
}


@section PanelBody
{

    @using (Html.BeginForm("Create", "Stake", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
                <label class="col-lg-2 control-label" for="Number">Номер Стеллажа</label>
                <div class="col-lg-1">
                    @Html.TextBoxFor(m => m.Number, new { @class = "form-control required-mark", @id = "Number", required = "required" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label" for="ShelfCount">Количество полок</label>
                <div class="col-lg-1">
                    @Html.TextBoxFor(m => m.ShelfCount, new { @class = "form-control required-mark", @id = "ShelfCount", required = "required" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label" for="ShelfFoldersCount">Количество папок на полке</label>
                <div class="col-lg-1">
                    @Html.TextBoxFor(m => m.ShelfFoldersCount, new { @class = "form-control required-mark", @id = "ShelfFoldersCount", required = "required" })
                </div>
            </div>
        <div class="form-group">
            <label class="col-lg-2 control-label" for="FolderSheetsCount">Количество листов в папке</label>
            <div class="col-lg-1">
                @Html.TextBoxFor(m => m.FolderSheetsCount, new {@class = "form-control required-mark", @id = "FolderSheetsCount", required = "required"})
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label" for="Descr">Описание</label>
            <div class="col-lg-4">
                @Html.TextAreaFor(m => m.Descr, new { @class = "form-control", @id = "Descr", rows="3", placeholder="Местонахождение, ответственный" })
            </div>
        </div>
            <div class="form-group">
                <div class="col-lg-push-2 col-lg-5">
                    <a class="btn btn-primary btn-sm" href="@Url.Action("Index")">Назад</a>
                    <button id="btnCreateAndClose" type="submit" class="btn btn-success" name="CreateAndClose" value="CreateAndClose"><i class="fa fa-save"></i>&nbsp;Сохранить и закрыть</button>
                    @*<button id="btnCreateAndContinue" type="submit" class="btn btn-success" name="CreateAndContinue" value="CreateAndContinue"><i class="fa fa-save"></i>&nbsp;Сохранить и продолжить</button>*@
                </div>
            </div>
        if (TempData["error"] != null)
        {
            <div class="form-group">
                <div class="col-lg-push-2 col-lg-5">
                    <blockquote class="alert-danger">@TempData["error"]</blockquote>
                </div>
            </div>
        }
    }
}
