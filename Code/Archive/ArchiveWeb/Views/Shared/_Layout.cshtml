@using ArchiveWeb.Objects
@using Microsoft.Ajax.Utilities
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/">
                    <img class="headLogo" src="~/Content/images/logo-unit.png" alt="" />
                    <div class="h5"><strong>ЮНИТ</strong>&nbsp;<span class="h6">Архив</span></div>
                </a>
                @*@Html.ActionLink("", "Index", "Home", null, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (ViewBag.CurUser.HasAccess(AdGroup.ArchiveAddDoc))
                    {
                        <li>
                            <a href='@Url.Action("Add", "Home")' class="nav-btn-primary">
                                <i class="fa fa-file-archive-o"></i> Прием документа
                            </a>
                        </li>
                    }
@*@if (ViewBag.CurUser.HasAccess(AdGroup.ArchiveCreateClaim))
{
    <li>
        <a href='@Url.Action("RequestDoc", "Home")' class="nav-btn-warning">
            <i class="fa fa-comment-o"></i> Новый запрос
        </a>
    </li>
}*@
@if (ViewBag.CurUser.HasAccess(AdGroup.ArchivePlacesEditor))
{
    <li>
        <a href='@Url.Action("Index", "Stake")' class="nav-btn-success">
            <i class="fa fa-folder-open-o"></i> Места хранения
        </a>
    </li>
}
@if (ViewBag.CurUser.HasAccess(AdGroup.ArchivePlacesEditor, AdGroup.ArchiveCreateRequest))
{
    <li>
        <a href='@Url.Action("Index", "Request")' class="nav-btn-warning">
            <i class="fa fa-folder-open-o"></i> Запросы
        </a>
    </li>
}
                    @*<li>@Html.ActionLink("Новый запрос", "Request", "Home")</li>*@
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="navbar-text">Вы вошли как <strong>@ViewBag.CurUser.ShortName</strong></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="container body-content">
        @RenderBody()
        <div class="clearfix"></div>
        <hr class="last" />
        <footer>
            <div class="pull-left">
                <h5>
                    2015 @if (DateTime.Now.Year > 2015)
                    {
                        @String.Format("- {0}", DateTime.Now.Year);
                    }
                    &copy; UN1T
                    <br />
                    <small>v&nbsp;1.0</small>
                </h5>
            </div>
            <div class="pull-right">
                <h5><small><a href='http://support.unitgroup.ru' target="_blank">Техподдержка</a></small></h5>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/sitejs")
    @RenderSection("scripts", required: false)
</body>
</html>
